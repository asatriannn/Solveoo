<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/ll1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginTop="45dp"
            android:paddingTop="25dp"
            android:paddingBottom="90dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#B6DAF2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rdcorner_blue"
            android:orientation="vertical"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity = "center"
                app:cardCornerRadius="90dp">

                <ImageView
                    android:layout_width="120dp"
                    android:id="@+id/prodile_picture"
                    android:layout_height="120dp"
                    android:src="@drawable/profile_picture"
                    android:scaleType="centerCrop"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_margin="10dp"
                android:gravity="center"
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Davit Asatryan"
                android:fontFamily="@font/fredoka_one"
                android:textColor="#063555"
                android:textSize="25dp"
                />


        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll2"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:elevation="15dp"
        android:background="@drawable/question_bg"
        app:layout_constraintTop_toBottomOf="@id/divider_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left block: Rank -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank"
                android:textSize="20dp"
                android:fontFamily="@font/fredoka_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ranking"
                android:text="10"
                android:paddingTop="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/fredoka_one" />
        </LinearLayout>

        <!-- Right block: Mean Score -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mean Score"
                android:textSize="20dp"
                android:fontFamily="@font/fredoka_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:id="@+id/mean_score"
                android:paddingTop="10dp"
                android:textSize="25dp"
                android:fontFamily="@font/fredoka_one" />
        </LinearLayout>
    </LinearLayout>






    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="76dp"
        android:id="@+id/divider_up"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ll1"/>


    <LinearLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll2">

        <!-- Row Template (Repeat for each section) -->
        <!-- QUESTIONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:id="@+id/bookmarkedQuestions"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blue_rd_corner_small"
                android:padding="10dp"
                android:src="@drawable/bookmark" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/blue_rd_corner_small"
                android:fontFamily="@font/fredoka_one"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="Saved Questions"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- BEST SCORE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/setting_layout"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blue_rd_corner_small"
                android:padding="8dp"
                android:src="@drawable/settings_ic" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/blue_rd_corner_small"
                android:fontFamily="@font/fredoka_one"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="Settings"
                android:textColor="@android:color/white"
                android:textSize="20sp" />


        </LinearLayout>

        <!-- TIME -->
        <LinearLayout
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/blue_rd_corner_small"
                android:padding="8dp"
                android:src="@drawable/logout_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/blue_rd_corner_small"
                android:fontFamily="@font/fredoka_one"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:text="Logout"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>